<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="100dp"
        app:cardCornerRadius="20dp"
        app:strokeColor="#E2E2E2"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/image_parle_ji" />

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:lineSpacingExtra="11.3sp"
                    android:text="Parle-G"
                    android:textColor="#49536f"
                    android:textSize="13.8sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="-4sp"
                        android:text="Product Type"
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtProductType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="BISCUIT"
                        android:textColor="#76c902"
                        android:textSize="13.8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/gray_line_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="-4sp"
                        android:text="Category"
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="BISCUIT"
                        android:textColor="#76c902"
                        android:textSize="13.8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/gray_line_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="-4sp"
                        android:text="Company"
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="BISCUIT"
                        android:textColor="#76c902"
                        android:textSize="13.8sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="MRP per Unit:"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/txtMrpUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="5"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="Shelf Life:"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tv_shelf_life"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="30 Aug 21"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="Current Stock:"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/current_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="160"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="Delievered Stock:"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="30"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="Undelievered Stock:"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="11.3sp"
                    android:text="30"
                    android:textColor="#757575"
                    android:textSize="11.3sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="-6.5sp"
                    android:text="Min Quantity:"
                    android:textColor="#757575"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_min_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:lineSpacingExtra="-6.5sp"
                    android:text="100"
                    android:textColor="#757575"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>