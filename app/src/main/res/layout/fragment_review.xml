                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="Agency Name:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtAgencyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="Mahavir Sales Agancy"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="GST No.:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtGstNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="A011334AQWEC"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="State"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="Gujarat"
