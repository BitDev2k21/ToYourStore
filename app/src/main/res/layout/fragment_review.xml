                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="Address:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text=" 02 Akshar Tower, VIP road Baroda."
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text=" Credit Period:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtCreditPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="30 Days"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="Routes:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtRoutine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="Daily"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="Operational Arreas:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtOperationArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="Airport Road"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="Operational Code:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtOPerationCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="Air 001"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineSpacingExtra="11.3sp"
                        android:text="Business Line:"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtBusinessLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:lineSpacingExtra="-7.8sp"
                        android:text="FMCG"
                        android:textColor="#757575"
                        android:textSize="11.3sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtConfirm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_green_button"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="Confirm"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_gray_button"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="Cancel"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>